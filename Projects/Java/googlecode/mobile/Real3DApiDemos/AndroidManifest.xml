<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.real3d.demos" android:versionCode="1" android:versionName="1.0">
	<supports-screens android:anyDensity="true" />
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus"
		android:required="false" />
	<uses-feature android:name="lge.hardware.real3d.barrier.landscape" />
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<uses-library android:name="com.lge.real3d" />
		<activity android:name=".Real3DApiDemos" android:label="@string/app_name"
			android:screenOrientation="landscape">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".opengl.MainActivity"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="landscape" />
		<activity android:name=".canvas.Real3DImageDemo"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="landscape" />
		<activity android:name=".canvas.DrawImage"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="landscape" />
		<activity android:name=".video.MediaPlayerDemo" />
		<activity android:name=".video.MediaPlayerDemo_Video"
			android:screenOrientation="landscape" />
		<activity android:name=".camera.CameraPreview"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="landscape"  />
		<activity android:name=".camera.CameraPreviewWithOpengl"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:screenOrientation="landscape"  />
	</application>
</manifest>