<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="pu1" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>org.tju.demo.lucene.bean.Book</class>
		<class>org.tju.demo.lucene.bean.Author</class>
		<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.hbm2ddl.auto" value="validate"/>
			<property name="hibernate.search.default.indexBase" value="target"/>
			<!--
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"></property>
			<property name="hibernate.connection.url" value="com.mysql.jdbc.Driver"></property>
			<property name="hibernate.connection.driver_class" value="jdbc:mysql://127.0.0.1:3306/ebs"></property>
			<property name="hibernate.connection.username" value="ebs"></property>
			<property name="hibernate.connection.password" value="ebs"></property>
			-->
		</properties>
	</persistence-unit>
</persistence>
