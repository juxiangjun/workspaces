<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	<SurfaceView android:id="@+id/video" android:layout_width="200dip"
		android:layout_height="fill_parent" android:layout_gravity="center">
	</SurfaceView>
	<FrameLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<com.real3d.demos.camera.CustomPreview
			android:id="@+id/camera_view" android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
		<android.opengl.GLSurfaceView android:id="@+id/gl_view"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />
	</FrameLayout>
</LinearLayout>